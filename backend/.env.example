# Environment Configuration

# Server
NODE_ENV=development
PORT=3000
API_BASE_URL=http://localhost:3000

# Database
DB_HOST=localhost
DB_PORT=5432
DB_NAME=taxi_dispatch
DB_USER=postgres
DB_PASSWORD=your_password_here
DB_POOL_MIN=2
DB_POOL_MAX=10

# Redis
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=

# JWT Authentication
JWT_SECRET=your_super_secret_jwt_key_change_in_production
JWT_EXPIRES_IN=24h
JWT_REFRESH_SECRET=your_refresh_token_secret
JWT_REFRESH_EXPIRES_IN=7d

# Operational Timeouts (seconds/minutes)
LOCATION_STALENESS_TIMEOUT_SECONDS=60
DRIVER_ASSIGNMENT_TIMEOUT_SECONDS=90
NO_SHOW_WAIT_TIME_MINUTES=10
WAITING_FEE_START_MINUTES=10
MAX_CONTINUOUS_DRIVING_HOURS=4

# Geo-check Configuration
ARRIVAL_GEO_CHECK_RADIUS_METERS=150
GPS_ACCURACY_THRESHOLD_METERS=50

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100
BOOKING_RATE_LIMIT_PER_PHONE=5

# Data Retention (days)
LOCATION_DATA_RETENTION_DAYS=90
BOOKING_DATA_RETENTION_DAYS=730
INVOICE_DATA_RETENTION_DAYS=2555

# Alert Thresholds
WEBHOOK_FAILURE_ALERT_THRESHOLD=5
BOOKING_STUCK_ALERT_MINUTES=30
FRAUD_FLAG_ALERT_THRESHOLD=10

# External Services (Add your API keys)
GOOGLE_MAPS_API_KEY=your_google_maps_key
TWILIO_ACCOUNT_SID=your_twilio_sid
TWILIO_AUTH_TOKEN=your_twilio_token
TWILIO_PHONE_NUMBER=+1234567890

# File Upload
UPLOAD_MAX_SIZE_MB=10
EVIDENCE_STORAGE_PATH=./uploads/evidence

# Logging
LOG_LEVEL=info
LOG_FILE_PATH=./logs/app.log

# Multi-tenant
MULTI_TENANT_ENABLED=false
DEFAULT_TENANT_ID=1
